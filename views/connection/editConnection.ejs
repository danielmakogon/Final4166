<%- include('../partials/header.ejs')%>
<div class = "content">
    <form method = "POST" action = "/connection/<%= connection._id%>?_method=PUT">
        <table>
            <tr>
                <td><label for="title" >Title</label></td>
                <td><input type="text" id="title" name="title" value = "<%= connection.title%>" class = "fixed-width"></td>
            </tr>
            <tr><td class = "align-top"><label for="content">Content</label></td>
                <td><textarea rows="5" id="content" name="content" class = "fixed-width"><%= connection.content%></textarea></td>
            </tr>
            <tr>
                <td><label for="startTime">Start Time</label></td>
                <td><input type="text" id="startTime" name="startTime" value = "<%= connection.startTime%>" class = "fixed-width"></td>
            </tr>
            <tr>
                <td><label for="endTime">End Time</label></td>
                <td><input type="text" id="endTime" name="endTime" value = "<%= connection.endTime%>" class = "fixed-width"></td>
            </tr>
            <tr>
                <td><label for="date">Date</label></td>
                <td><input type="text" id="date" name="date" value = "<%= connection.date%>" class = "fixed-width"></td>
            </tr>
            <tr>
                <td><label for="imgSrc">Image Url</label></td>
                <td><input type="text" id="imgSrc" name="imgSrc" value = "<%= connection.imageSrc%>" class = "fixed-width"></td>
            </tr>
            <tr>
                <td colspan="2" class = "align-right"><button>Submit</button></td>
            </tr>
            </table>        
    </form>

    </div>
    <%- include('../partials/footer.ejs')%>
