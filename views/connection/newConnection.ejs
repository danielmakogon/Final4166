<%- include('../partials/header.ejs')%>
<div class = "newContent">
    <form action = '/connection' method = 'POST'>
        <table>
            <tr>
                <td><label for="title">Title</label></td>
                <td><input type="text" id="title" name="title" class = "fixed-width"></td>
            </tr>
            <tr>
                <td class = "align-top"><label for="content">Content</label></td>
                <td><textarea rows="5" id="content" name="content" class = "fixed-width"></textarea></td>
            </tr>
            <tr>
                <td class = "align-top"><label for="catagory">Catagory</label></td>
                <td><select name="catagory" id="catagory">
                    <option value="Marvel">Marvel</option>
                    <option value="DC">DC</option>
                    <option value="Other">Other</option>

                </select></td>
            </tr>
            <tr>
                <td><label for="date">Date</label></td>
                <td><input type="date" id="date" name="date" class = "fixed-width"></td>
            </tr>
            <tr>
                <td><label for="startTime">Start Time</label></td>
                <td><input type="text" id="startTime" name="startTime" class = "fixed-width"></td>
            </tr>
            <tr>
                <td><label for="endTime">End Time</label></td>
                <td><input type="text" id="endTime" name="endTime" class = "fixed-width"></td>
            </tr>
            <tr>
                <td><label for="imgSrc">Image Url</label></td>
                <td><input type="text" id="imgSrc" name="imgSrc" class = "fixed-width"></td>
            </tr>
            <tr>
                <td colspan="2" class = "align-right"><button  id = "button">Submit</button></td>
            </tr>
        </table>        
    </form>

    </div>
    <%- include('../partials/footer.ejs')%>